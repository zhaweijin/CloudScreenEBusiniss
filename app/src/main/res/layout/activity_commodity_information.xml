<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    tools:context=".home.APITestActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/promotion_qrcode"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/commodity_infomartion_qr_magrin_left_47"
        android:layout_marginTop="@dimen/commodity_infomartion_qr_magrin_top_40"
        android:layout_width="@dimen/commodity_infomartion_qr_magrin_wh_180"
        android:layout_height="@dimen/commodity_infomartion_qr_magrin_wh_180" />

    <ImageView
        android:id="@+id/arrow_left"
        android:layout_width="@dimen/length_33"
        android:layout_height="@dimen/imgh_commodityinfo_57"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/length_27"
        android:background="@drawable/commodity_information_arrow_left" />


    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="@dimen/length_33"
        android:layout_height="@dimen/imgh_commodityinfo_57"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/length_27"
        android:background="@drawable/commodity_information_arrow_right" />

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/length_20"
        android:layout_width="@dimen/gap_commodity_450"
        android:id="@+id/layout_count_time"
        android:visibility="gone"
        android:background="@drawable/commodity_info_telephone_bg"
        android:layout_height="@dimen/imgh_commodityinfo_80">

        <TextView
            android:text=""
            android:textSize="@dimen/sp_27"
            android:singleLine="true"
            android:id="@+id/count_down_time"
            android:layout_marginLeft="@dimen/length_50"
            android:layout_marginRight="@dimen/gap_commodity_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/information_ok_tips"
            android:textSize="@dimen/sp_27"
            android:singleLine="true"
            android:id="@+id/tips_ok"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/length_50"
            android:layout_marginRight="@dimen/gap_commodity_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <include
        layout="@layout/commodity_item_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgh_commodityinfo_230"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"></include>

</RelativeLayout>