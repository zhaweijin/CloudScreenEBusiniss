    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_above="@+id/last"
        android:layout_marginRight="@dimen/promotion_information_dp_40">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/promotion_information_dp_20"
            android:layout_marginLeft="@dimen/promotion_information_dp_110"
            android:divider="#FFFFFFFF"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/correctangle"
            android:scrollbarTrackVertical="@drawable/scroll_color"
            android:minHeight="@dimen/promotion_information_dp_500"
            android:scrollbarStyle="outsideInset"
            android:fadeScrollbars="false"
            android:paddingRight="@dimen/promotion_information_dp_40"
            android:id="@+id/homeList">
        </ListView>
    </RelativeLayout>
    <!--</ScrollView>-->
    <RelativeLayout
        android:id="@+id/last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/promotion_information_dp_20"
        android:layout_marginTop="@dimen/promotion_information_dp_10"
        android:layout_marginLeft="@dimen/promotion_information_dp_110"
        android:layout_marginRight="@dimen/promotion_information_dp_110">
