<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/back_tips1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/promotion_information_dp_30"
            android:layout_toLeftOf="@+id/back_icon"
            android:text="@string/back_tip1"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="@dimen/promotion_information_dp_26"
            android:layout_height="@dimen/promotion_information_dp_21"
            android:layout_toLeftOf="@+id/back_tips2"
            android:background="@drawable/collection_back"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/back_tips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/promotion_information_dp_28"
            android:text="@string/back_tip2"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>