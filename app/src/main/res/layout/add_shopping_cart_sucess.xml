<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    tools:context=".home.HomeActivity">

    <LinearLayout
        android:layout_width="@dimen/width_testactivity_250"
        android:layout_height="@dimen/height_test_230"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="商品已成功加入购物车"
            android:textSize="@dimen/sp_25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_commodity_30"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_jiesuan"
                android:layout_width="@dimen/height_mainactivity_90"
                android:layout_height="wrap_content"
                android:text="去结算" />

            <Button
                android:id="@+id/go_browser"
                android:layout_width="@dimen/height_mainactivity_90"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/length_20"
                android:text="继续浏览" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>