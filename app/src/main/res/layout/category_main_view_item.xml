<?xml version="1.0" encoding="utf-8"?>
<com.hiveview.dianshang.view.FocusRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/focus_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/commoditymaincategory_280"
    android:background="@drawable/commodity_item_focus"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/length_8">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="@dimen/commoditymaincategory_329"
            android:layout_height="@dimen/commoditymaincategory_280"
            android:background="@drawable/category_main_item_bg"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImageScaleType="fitXY" />

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="@dimen/commoditymaincategory_329"
            android:layout_height="@dimen/commoditymaincategory_280"
            android:layout_centerInParent="true"
            android:background="@drawable/main_category_item_bg" />


        <TextView
            android:id="@+id/text"
            android:layout_width="@dimen/width_commoditycategory_150"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/length_110"
            android:gravity="center"
            android:lines="2"
            android:text="生活服务"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_33" />

    </RelativeLayout>


</com.hiveview.dianshang.view.FocusRelativeLayout>