<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="@dimen/height_apitestactivity_70">

    <ImageView
        android:id="@+id/progress_dialog_loading_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/progress_dialog_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/length_15"
        android:layout_toRightOf="@id/progress_dialog_loading_img"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25" />

</RelativeLayout>