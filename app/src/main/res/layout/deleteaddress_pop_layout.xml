<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/common_dialog_width_933"
        android:layout_height="@dimen/common_dialog_height_427"
        android:background="@drawable/shape_pop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/length_110"
            android:singleLine="true"
            android:textColor="#3B3B3B"
            android:textSize="@dimen/sp_40"
            android:text="@string/settip"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_addressmanager_67"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/gap_popwindow_129"
            android:layout_marginBottom="@dimen/gap_addressmanager_67"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/confirm"
                android:layout_width="@dimen/qr_width_267"
                android:layout_height="match_parent"
                android:background="@drawable/refundbutton_focus"
                android:text="@string/confirmdelete"
                android:textColor="@drawable/textcolor"
                android:textSize="@dimen/sp_24" >
            </Button>

            <Button
                android:id="@+id/cancel"
                android:layout_width="@dimen/qr_width_267"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/gap_addressmanager_67"
                android:background="@drawable/refundbutton_focus"
                android:text="@string/cancel"
                android:textColor="@drawable/textcolor"
                android:textSize="@dimen/sp_24" >
            </Button>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>