<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/width_confirmdialog_933"
        android:layout_height="@dimen/height_confirmdialog_427"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape_pop">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/length_100"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/has_unpaid_acution_order"
            android:textColor="#3B3B3B"
            android:textSize="@dimen/sp_40" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/acution_dialog_layout_button_height"
            android:layout_below="@+id/title"
            android:layout_marginBottom="@dimen/acution_dialog_layout_button_margin_bottm"
            android:layout_marginTop="@dimen/acution_dialog_layout_button_margin_top"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_pay"
                android:layout_width="@dimen/acution_dialog_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/refundbutton_focus"
                android:text="@string/acution_payment"
                android:textColor="@drawable/textcolor"
                android:textSize="@dimen/sp_24"></Button>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>