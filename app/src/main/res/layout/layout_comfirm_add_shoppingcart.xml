<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/length_110"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/exit_payment_message"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_40" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginBottom="@dimen/gap_addressmanager_67"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ok"
                android:layout_width="@dimen/qr_width_267"
                android:layout_height="@dimen/gap_addressmanager_67"
                android:background="@drawable/button_selector"
                android:text="@string/continue_payment"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_24"></Button>

            <Button
                android:id="@+id/exit"
                android:layout_width="@dimen/qr_width_267"
                android:layout_height="@dimen/gap_addressmanager_67"
                android:layout_marginLeft="@dimen/gap_addressmanager_67"
                android:background="@drawable/button_selector"
                android:text="@string/confirm_exit"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_24"></Button>

        </LinearLayout>

</RelativeLayout>