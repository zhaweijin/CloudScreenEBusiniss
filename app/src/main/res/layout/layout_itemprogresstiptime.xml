<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/tiptime1"
        android:layout_width="@dimen/width_commoditycategory_150"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#3B3B3B"
        android:textSize="@dimen/sp_16"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tiptime2"
        android:layout_width="@dimen/width_commoditycategory_150"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tiptime1"
        android:layout_marginLeft="@dimen/ordermain_140"
        android:layout_toEndOf="@+id/tiptime1"
        android:layout_toRightOf="@+id/tiptime1"
        android:textColor="#3B3B3B"
        android:textSize="@dimen/sp_16"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tiptime3"
        android:layout_width="@dimen/width_commoditycategory_150"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tiptime2"
        android:layout_marginLeft="@dimen/length_200"
        android:layout_toEndOf="@+id/tiptime2"
        android:layout_toRightOf="@+id/tiptime2"
        android:textColor="#3B3B3B"
        android:textSize="@dimen/sp_16"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tiptime4"
        android:layout_width="@dimen/width_commoditycategory_150"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tiptime3"
        android:layout_marginLeft="@dimen/ordermain_140"
        android:layout_toEndOf="@+id/tiptime3"
        android:layout_toRightOf="@+id/tiptime3"
        android:textColor="#3B3B3B"
        android:textSize="@dimen/sp_16"
        android:gravity="center"/>
</RelativeLayout>