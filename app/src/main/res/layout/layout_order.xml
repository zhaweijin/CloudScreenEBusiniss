<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#D3D3D3"
    >
    <include layout="@layout/layout_null_tips"
        android:id="@+id/layout_tips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></include>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/length_20"
        android:background="#D3D3D3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/height_collectionmain_35"
            android:layout_marginTop="@dimen/gap_allcommodity_31"
            android:layout_marginRight="@dimen/length_30"
            android:gravity="center|right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_27"
                android:textColor="#3b3b3b"
                android:textStyle="bold"
                android:text="@string/ordertip"/>
            <ImageView
                android:layout_width="@dimen/gap_afterdetail_24"
                android:layout_height="@dimen/length_20"
                android:src="@drawable/menu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_27"
                android:textColor="#3b3b3b"
                android:textStyle="bold"
                android:text="@string/ordertip2"/>
        </LinearLayout>

    <ListView
        android:id="@+id/orderListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3D3D3"
        android:scrollbars="none"
        android:divider="#00000000"
        android:dividerHeight="@dimen/length_20"></ListView>

    </LinearLayout>




</FrameLayout>