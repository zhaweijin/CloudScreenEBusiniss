<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_shoppingcartlist_127"
    android:orientation="vertical"
    tools:context=".home.APITestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送货信息"
                android:layout_alignParentLeft="true"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/transaction_close_status"
                android:text="交易关闭"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:textColor="#C0021B"
                android:textSize="@dimen/sp_24" />
        </RelativeLayout>


        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/length_20"
            android:text=""
            android:lines="3"
            android:maxLines="3"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>

    　

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_2"
        android:layout_marginBottom="@dimen/gap_aftersale_16"
        android:layout_marginTop="@dimen/gap_aftersale_16"
        android:background="#b8b8b8"></LinearLayout>

</LinearLayout>