<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical"
    tools:context=".home.APITestActivity">

    <LinearLayout
        android:layout_width="@dimen/width_paysucess_133"
        android:layout_height="@dimen/width_paysucess_133"
        android:layout_above="@+id/text1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/payment_sucess_icon"
        android:layout_marginBottom="@dimen/length_47"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text2"
        android:text="支付成功"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_48" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="我们会为你尽快发货"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_32" />


    <Button
        android:id="@+id/view_order"
        android:layout_marginTop="@dimen/gap"
        android:layout_width="@dimen/qr_width_267"
        android:layout_height="@dimen/gap_addressmanager_67"
        android:layout_centerHorizontal="true"
        android:text="@string/payment_close"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/text2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_32" />

</RelativeLayout>