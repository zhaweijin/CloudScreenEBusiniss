<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_live"
    tools:context=".home.APITestActivity">

    <com.hiveview.dianshang.view.HiveviewVideoView
        android:id="@+id/video"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/video_play_bg"
        android:visibility="gone"
        android:background="@drawable/default_icon1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/video_play_icon"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/live_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.hiveview.dianshang.view.LoadingView
        android:id="@+id/loadingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>