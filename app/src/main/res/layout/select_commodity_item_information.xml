<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commodity_item_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.APITestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/select_comodity_item_r_layout_margin_left_53"
        android:layout_marginRight="@dimen/select_comodity_item_r_layout_margin_right_80">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/commodity_icon"
            android:layout_width="@dimen/select_comodity_item_icon_width_245"
            android:layout_height="@dimen/select_comodity_item_icon_height_170"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/select_comodity_item_icon_margin_top_40"
            android:background="@drawable/commodity_small_icon"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImageScaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/length_20"
            android:layout_toRightOf="@+id/commodity_icon"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/commodity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:maxWidth="@dimen/sku_commodity_name_max_width_550"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_47"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/commodity_collecton_status"
                    android:layout_width="@dimen/select_comodity_item_commodity_collecton_status_width_66"
                    android:layout_height="@dimen/length_40"
                    android:layout_marginLeft="@dimen/length_20"
                    android:layout_marginTop="@dimen/select_comodity_item_commodity_collecton_status_margin_top_9"
                    android:background="@drawable/commodity_collection_status"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/commodity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/sku_commodity_title_max_width_500"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/commodity_express_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/length_20"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sale_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/length_300"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/length_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commodity_new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/length_30"
                android:text=""
                android:textColor="#FF3A00"
                android:textSize="@dimen/sp_47"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/commodity_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/length_20"
                android:text=""
                android:textColor="#8B8B8B"
                android:textSize="@dimen/sp_24" />


            <TextView
                android:id="@+id/commodity_support"
                android:layout_width="@dimen/select_comodity_item_commodity_commodity_support_width_127"
                android:layout_height="@dimen/length_40"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/length_20"
                android:background="@color/home_focus_icon_color"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/promotion_info_show"
                android:layout_width="@dimen/select_comodity_item_commodity_commodity_support_width_127"
                android:layout_height="@dimen/length_40"
                android:layout_marginTop="@dimen/length_20"
                android:visibility="gone"
                android:textSize="@dimen/sp_20"
                android:layout_gravity="right"
                android:text="促销详情"
                android:textColor="@color/black"
                android:background="@drawable/rectangle_button_selector" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>