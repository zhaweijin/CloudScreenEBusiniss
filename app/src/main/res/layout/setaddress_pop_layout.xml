<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/width_confirmdialog_933"
        android:layout_height="@dimen/height_confirmdialog_427"
        android:background="@drawable/shape_pop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/length_110"
            android:layout_marginLeft="@dimen/height_apitestactivity_70"
            android:layout_marginRight="@dimen/height_apitestactivity_70"
            android:gravity="center"
            android:text="@string/settip"
            android:textColor="#3b3b3b"
            android:textSize="@dimen/sp_40"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_addressmanager_67"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/length_110"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/setting"
                android:layout_width="@dimen/qr_width_267"
                android:layout_height="match_parent"
                android:background="@drawable/refundbutton_focus"
                android:text="@string/settip"
                android:textColor="@drawable/textcolor"
                android:textSize="@dimen/sp_24"></Button>

            <Button
                android:id="@+id/skip"
                android:layout_width="@dimen/qr_width_267"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/gap_addressmanager_67"
                android:background="@drawable/refundbutton_focus"
                android:text="@string/skip"
                android:textColor="@drawable/textcolor"
                android:textSize="@dimen/sp_24"></Button>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>