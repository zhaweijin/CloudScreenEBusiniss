<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buy_gift_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.APITestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_30"
        android:layout_marginLeft="@dimen/length_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buy_gift_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="赠品:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/buy_gift_goods_name"
            android:layout_width="@dimen/shoppingcart_item_gift_name_width_450"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_toRightOf="@+id/buy_gift_title"
            android:text="洗发水"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/buy_gift_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_5"
            android:text="x3"
            android:textColor="@color/black" />

    </RelativeLayout>


</LinearLayout>