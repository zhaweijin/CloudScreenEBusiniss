<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/focused_view_selector"
    tools:context=".home.HomeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_110"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commodity_icon"
            android:layout_width="@dimen/length_80"
            android:layout_height="@dimen/length_80"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/holo_blue_bright" />

        <TextView
            android:id="@+id/commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_22"
            android:layout_toRightOf="@+id/commodity_icon"
            android:text="11111" />

        <ImageView
            android:id="@+id/commodity__"
            android:layout_width="@dimen/gap_commodity_30"
            android:layout_height="@dimen/gap_commodity_30"
            android:layout_centerVertical="true"
            android:background="@android:color/darker_gray"
            android:layout_toLeftOf="@+id/commodity_price"
            android:text="11111" />

        <TextView
            android:id="@+id/commodity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_22"
            android:text="99.00" />
    </RelativeLayout>

</LinearLayout>